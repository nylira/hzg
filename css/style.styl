@import 'm/all'
@import 'd/all'

m = 16px
txt = #fff

link = hsl(218,100,53)

strong
  font-weight bold

dfont()
  fs m
  lh 1.5
  ff sans
  color txt
  font-smoothing()
  text-shadow #000 0 2px 0

img
  vertical-align top

a
  color link
  text-decoration none
  fw bold
  &:hover, &:visited
    color link

bot = #000
top = m25
top = m25 url(../i/texture.jpg) 

html, body
  width 640px

body
  dfont()
  fs 162.5%
  bg #000
  width 640px
  overflow-x hidden

  #container
    width 640px
    min-height 960px
    bg bot

    header.app
      display none
      img
        vertical-align top

    section
      bb 2px solid bot
      bg top
      mar 0 0 m*.5
      box-shadow inset b25 0 -10px m
      header
        pad m*2 0
        clearfix()
        h1
          pl m*2
          float left
          fs 150%
        menu
          float right
          ul
            clearfix()
            li
              float left
              a
                box-sizing()
                pad 0 m
                width c
                display block
                font bold 150% sans
                lh m*2.5
                height m*3

      .content
        pad 0 m*2 m*2
        p
          pad 0 0 m*2

      &.menu.actions
        pad 0
        ul
          li
            display inline-block
            pad m m*2
            box-sizing()
            width 50%
            color hsl(215,80,45)
            fw bold

            &.checkbox
              label
                float left
                color #fff

              .checkbox
                float right
                mar m*.5 - 4px 0
                square m*1.5
                border 2px solid #fff
                &:after
                  content "\2713"
                  display block
                  lh m*1.5
                  color #fff
                  width m*1.5
                  text-align center
            
            &.play
              bl 1px solid bot
              a.play
                pad m*.75 - 2px m*1.5 - 2px
                p
                  color #fff
                  &.verb
                    float left
                  &.price
                    float right
                    .currency
                      color w60
      &.banner
        width 640px
        height 320px
        pad 0
        mar 0
        bg m80
        p
          display none
          font 3em/320px sans
          text-align center
          color m100

      &.summary
        header
          bg b25
          position relative
          top 2px
          bb 2px solid b50
          box-shadow b30 0 3px 10px
          h1 
            float left
            fw bold
            color #fff

          .icon
            float right
            square m*4
            mr m*2
            bt 2px solid b40
            br 2px solid w10
            bb 2px solid w20
            bl 2px solid b20
            border-radius .5em
            position relative
            &:after
              content ""
              display block
              square m*4
              box-shadow inset #000 0 0 m
              position absolute
              top 0
              left 0
              border-radius .5em
            .img
              square 58px
              background: url(i/icon_58x58.jpg) 
              mar 3px
              border-radius .4em

        .content
          pad m*2
          bt 2px solid w10
        
     
      &.stats
        ul
          clearfix()
          li
            width 213px
            box-sizing()
            float left
            pad m*2 m*2
            &:not(:last-of-type)
              br 2px solid bot
              
            p
              &.label
                color w50
                mar 0 0 .25em
              &.data
                fs 150%

      &.tips
        pad 0 0 m*2
        ul.tips
          li.tip
            cite
              color #999
              span
                fw bold
                color #ccc
                &.author
                  color hsl(215,100,60)

      &.boss
        .content
          pad 0 m*2 m*4
          clearfix()
          p
            pad 0
          .since
            color #999
            span
              fw bold
              color txt

          img.avatar
            display block
            square 100px
            mr m*2
            float left
