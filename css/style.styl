@import 'm/all'
@import 'd/all'

m = 16px
txt = #fff

link = txt

strong
  font-weight bold

dfont()
  fs m
  lh 1.5
  ff sans
  color txt
  font-smoothing()

img
  vertical-align top

a
  color link
  text-decoration none
  &:hover
    color link

bot = #000
top = m25

html, body
  width 640px

body
  dfont()
  fs 150%
  bg #000
  width 640px
  overflow-x hidden

  #container
    width 640px
    min-height 960px
    bg bot

    header.app
      display none
      img
        vertical-align top

    section
      bb 2px solid bot
      bg top
      mar 0 0 m*.5
      header
        pad m*2 0
        clearfix()
        h1
          pl m*2
          float left
          fs 150%
        menu
          float right
          ul
            clearfix()
            li
              float left
              a
                box-sizing()
                pad 0 m
                width c
                display block
                font bold 150% sans
                lh m*2.5
                height m*3

      .content
        pad 0 m*2 m*2
        p
          pad 0 0 m*2

      &.menu.actions
        pad 0
        ul
          li
            display inline-block
            pad m m*2
            box-sizing()
            width 50%
            color hsl(215,80,45)
            fw bold

            &.checkbox
              label
                float left
                color #fff

              .checkbox
                float right
                mar m*.5 - 4px 0
                square m*1.5
                border 2px solid #fff
                &:after
                  content "\2713"
                  display block
                  lh m*1.5
                  color #fff
                  width m*1.5
                  text-align center
            
            &.play
              bl 1px solid bot
              a.play
                pad m*.75 - 2px m*1.5 - 2px
                p
                  color #fff
                  &.verb
                    float left
                  &.price
                    float right
                    .currency
                      color w60
      &.banner
        width 640px
        height 320px
        pad 0
        bg m80
        img
          display none
        p
          font 3em/320px sans
          text-align center
          color m100
        
     
      &.stats
        pad 0
        ul
          clearfix()
          li
            width 213px
            box-sizing()
            float left
            pad m m*2
            &:nth-of-type(2)
              width 211px
              
            p
              &.label
                color w50
                mar 0 0 .25em
              &.data
                fs 150%

      &.text
        ul.tips
          li.tip
            cite
              color #999
              span
                fw bold
                color #ccc
                &.author
                  color hsl(215,100,60)

      &.boss
        .content
          pad 0 m*2 m*4
          clearfix()
          .name
            fw bold

          img.avatar
            display block
            square 100px
            mr m*2
            float left
